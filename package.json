{
  "name": "tokumei-player-plus",
  "version": "1.1.1",
  "description": "Webメディア「オモコロ」のラジオを再生する非公式のソフトウェア",
  "author": {
    "name": "arrow2nd",
    "email": "arrow2nd_workspace@zohomail.com"
  },
  "license": "MIT",
  "main": "./build/main.js",
  "private": true,
  "scripts": {
    "start": "run-s clean build serve",
    "start:dev": "run-s clean build:dev serve",
    "clean": "rimraf ./build",
    "clean:dist": "rimraf \"./dist/!(*.exe|*.deb|*.AppImage|*.dmg)\"",
    "build": "webpack",
    "build:dev": "cross-env NODE_ENV=\"development\" webpack",
    "serve": "electron .",
    "pack:win": "electron-builder --win --x64",
    "pack:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.arrow2nd.tokumei",
    "files": [
      "./build/**/*"
    ],
    "directories": {
      "output": "./dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./icon/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./icon",
      "category": "Audio"
    },
    "publish": null
  },
  "devDependencies": {
    "@types/node": "^14.14.33",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.2",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.3.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-devtools": "^4.10.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
